<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>

    <mapping class="edu.imagine.domain.entity.user.User"/>
    <mapping class="edu.imagine.domain.entity.company.Company"/>
    <mapping class="edu.imagine.domain.entity.profile.Profile"/>
    <mapping class="edu.imagine.domain.entity.chat.Chat"/>
    <mapping class="edu.imagine.domain.entity.userchat.UserChat"/>
  </session-factory>
</hibernate-configuration>